{
  "expo": {
    "name": "ltagCalendar",
    "slug": "ltagCalendar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "package": "com.se77ings.ltagCalendar"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Precisamos de acesso à câmera para personalizar sua experiência."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permita que Ltag Calendar autentique via Face ID."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "16344aa2-d51d-4c85-8ab6-35d2f70975a5"
      }
    }
  }
}
